{
  "expo": {
    "name": "CashPilot",
    "slug": "cashpilot",
    "owner": "omaralmnt",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "cashpilot",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },

    "ios": {
      "supportsTablet": true,
      "userInterfaceStyle": "automatic",
      "bundleIdentifier": "com.omaralmnt.cashpilot",
      "infoPlist": {
        "NSFaceIDUsageDescription": "CashPilot usa Face ID para un acceso rápido y seguro a tu cuenta",
        "NSCameraUsageDescription": "CashPilot necesita acceso a la cámara para escanear recibos y documentos financieros"
      }
    },
    "android": {
      "package": "com.omaralmnt.cashpilot",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#667eea"
      },
      "edgeToEdgeEnabled": true,
      "userInterfaceStyle": "automatic",
      "permissions": [
        "USE_FINGERPRINT",
        "USE_BIOMETRIC",
        "CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-local-authentication"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      },
      "API_URL":"http://192.168.100.20:4000"
    }
  }
}

